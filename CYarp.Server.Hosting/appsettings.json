{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://+:80"
      },
      "Https": {
        "Url": "https://+:443"
      }
    },
    "Certificates": {
      "Default": {
        "Path": "",
        "Password": ""
      }
    }
  },
  "CYarpOptions": {
    "ClientAuthorization": {
      "AllowRoles": [ "Client" ],
      "ClientIdClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/sid"
    }
  },
  "JwtTokenOptions": {
    "PublicKeyPath": "jwt-keys/publickey.pem",
    "SecurityAlgorithm": "RS256"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Yarp.ReverseProxy": "Error",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Server": "Error"
      }
    }
  },
  "AllowedHosts": "*"
}
